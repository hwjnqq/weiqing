	<platform>
		<supports>
			<item type="app" />
			<item type="wxapp" />
		</supports>
		<plugins>
			<item name="wn_storex_plugin_credit_mall" />
			<item name="wn_storex_plugin_hotel_service" />
			<item name="wn_storex_plugin_sms" />
			<item name="wn_storex_plugin_printer" />
